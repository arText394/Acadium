{
  "manifest_version": 3,
  "name": "Acadium",
  "version": "1.1",
  "permissions": [
    "storage", "notifications", "alarms", "tabs", "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["acadiumalarm.mp3"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    }
  ]
}
